<h1>我的店面</h1>

<div class="container">

  <div class="show--store__header col-12">
    <h1><%= @store.name %></h1>
    <p><%= @store.description %></p>
    <p><%= @store.location %></p>
  </div>
  <div class="show--store__body col-8">
    <div class="dishes__list">
      <% @store.dishes.each do |dish| %>
        <div class="dishes__card">
          <div class="dishes__card--desc">
            <p><%= dish.name %></p>
            <p><%= dish.price %></p>
          </div>
          <div class="dish__img">
            <%= image_tag dish.main_img_url if dish.main_img? %>
          </div>
        </div>
      <% end %>
      <% if policy(@store).edit? %>
        <div class="dishes__card">
          <div class="dishes__card--desc">
            <%= link_to "新增菜色", new_admin_store_dish_path(store_id: @store.id), remote: true, class: 'btn btn-success btn-add' %>
          </div>
          <div class="dish__img">
            <!-- 圖片上傳區 -->
          </div>
        </div>
      <% end %>

    </div>
  </div>
  <div class="show--store__info col-4">
    <div class="show--store__main_img">
      <%= image_tag @store.main_img_url if @store.main_img? %>
    </div>
    <%= link_to '編輯商店', edit_admin_store_path(@store), class: 'btn btn-warning' if policy(@store).edit? %>
  </div>
</div>

